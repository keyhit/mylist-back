<p id="notice"><%= notice %></p>

<h1>Jobs</h1>
<%= link_to 'Parts', v1_job_parts_path(1) %> 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= link_to 'Show', v1_job_path(job) %></td>
        <td><%= link_to 'Edit', edit_v1_job_path(job) %></td>
        <td><%= link_to 'Destroy', v1_job_path(job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


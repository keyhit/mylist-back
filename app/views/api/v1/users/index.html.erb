<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'Jobs', v1_user_jobs_path(1) %> 

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', v1_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_v1_user_path(user) %></td>
        <td><%= link_to 'Destroy', v1_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_v1_user_path %> 
